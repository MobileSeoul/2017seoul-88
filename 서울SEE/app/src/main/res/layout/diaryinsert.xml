<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:background="@android:color/white"
    android:weightSum="1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/back"
            android:background="@drawable/back"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_alignParentLeft="true"
            android:onClick="back"
            android:layout_alignBottom="@+id/home"
            android:layout_marginTop="7dp"/>

        <ImageView
            android:id="@+id/diarylogo"
            android:layout_width="156dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:src="@drawable/diarylogo" />

        <Button
            android:id="@+id/home"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/home"
            android:onClick="home"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/photoinsert"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:src="@drawable/photoinsert"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/insert_memoEdit"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:gravity="top"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:textColor="#ff000000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"></EditText>
    </RelativeLayout>
    <Button
        android:id="@+id/insert_dateBtn"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="#00000000"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/buttonLayouts"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/insert_saveBtn"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:text="저장"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#ff69e2d7"
            android:background="@android:color/white"/>
        <Button
            android:id="@+id/delete_Btn"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:text="삭제"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#ff69e2d7"
            android:background="@android:color/white"
            />
        <Button
            android:id="@+id/insert_cancelBtn"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:text="닫기"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#ff69e2d7"
            android:background="@android:color/white"
            />
    </LinearLayout>


</LinearLayout>